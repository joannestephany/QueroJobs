@model QueroJobsWEB.Models.FormModel

@{
    ViewData["Title"] = "Currículo";
}
<div class="container px-5">
    <h1 id="form-title">@ViewData["Title"]</h1>

    <form asp-action="Form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="CandidateId" type="hidden" />
        <h4>Dados Gerais</h4>
        <hr />
        <div class="row ">
            <div class="col">
                <div class="form-group">
                    <label asp-for="SalaryExpectation" class="control-label"></label>
                    <input asp-for="SalaryExpectation" class="form-control" />
                    <span asp-validation-for="SalaryExpectation" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="EmploymentStatus" class="control-label"></label>
                    <input asp-for="EmploymentStatus" class="form-control" />
                    <span asp-validation-for="EmploymentStatus" class="text-danger"></span>
                </div>
            </div>
        </div>

        <h4>Escolaridade</h4>
        <hr />
        <div class="form-group">
            <label asp-for="Scholarity" class="control-label"></label>
            <input asp-for="Scholarity" class="form-control" />
            <span asp-validation-for="Scholarity" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Course" class="control-label"></label>
            <input asp-for="Course" class="form-control" />
            <span asp-validation-for="Course" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Instituion" class="control-label"></label>
            <input asp-for="Instituion" class="form-control" />
            <span asp-validation-for="Instituion" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ScholarityStartDate" class="control-label"></label>
            <input asp-for="ScholarityStartDate" class="form-control" />
            <span asp-validation-for="ScholarityStartDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ScholarityEndDate" class="control-label"></label>
            <input asp-for="ScholarityEndDate" class="form-control" />
            <span asp-validation-for="ScholarityEndDate" class="text-danger"></span>
        </div>

        <h4>Experiência Profissional</h4>
        <hr />

        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Role" class="control-label"></label>
                    <input asp-for="Role" class="form-control" />
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProfessionalExperienceStartMonth" class="control-label"></label>
                    <input asp-for="ProfessionalExperienceStartMonth" class="form-control" />
                    <span asp-validation-for="ProfessionalExperienceStartMonth" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProfessionalExperienceEndMonth" class="control-label"></label>
                    <input asp-for="ProfessionalExperienceEndMonth" class="form-control" />
                    <span asp-validation-for="ProfessionalExperienceEndMonth" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProfessionalExperienceStartYear" class="control-label"></label>
                    <input asp-for="ProfessionalExperienceStartYear" class="form-control" />
                    <span asp-validation-for="ProfessionalExperienceStartYear" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProfessionalExperienceEndYear" class="control-label"></label>
                    <input asp-for="ProfessionalExperienceEndYear" class="form-control" />
                    <span asp-validation-for="ProfessionalExperienceEndYear" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>

</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
