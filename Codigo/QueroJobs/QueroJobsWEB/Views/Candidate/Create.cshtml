@model QueroJobsWEB.Models.CandidateModel

@{
    ViewData["Logo"] = "Quero Jobs";
    ViewData["TitleForm"] = "Cadastro";
    ViewData["TitleScreen"] = "Cadastro para candidatos";
    int controllerPage = (int) ViewData["controllerPage"];
}

<div class="row body">
    <div class="col-sm-6 apresentation">
        <div class="row logo">
            <div class="col-sm-2"></div>
            <div class="col-sm-3">
                <p>@ViewData["Logo"]</p>
            </div>
            <div class="col-sm-7"></div>
        </div>
        <div class="row title_screen">
            <div class="col-sm-2"></div>
            <div class="col-sm-3">
                <p>@ViewData["TitleScreen"]</p>
            </div>
            <div class="col-sm-7"></div>
        </div>
        <div class="row text_background_first">
            <div class="col-sm-8"></div>
            <div class="col-sm-4">
                <p>@ViewData["logo"]</p>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <h1>@ViewData["TitleForm"]</h1>
        <div class="col-sm-8 form">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @{
                    switch (@ViewData["controllerPage"])
                    {
                        case 1:
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control py-2 rounded-pill mr-1 pr-5" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" class="form-control py-2 rounded-pill mr-1 pr-5" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Cep" class="control-label"></label>
                                <input asp-for="Cep" class="form-control py-2 rounded-pill mr-1 pr-5" />
                                <span asp-validation-for="Cep" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Country" class="control-label"></label>
                                <input asp-for="Country" class="form-control py-2 rounded-pill mr-1 pr-5" />
                                <span asp-validation-for="Country" class="text-danger"></span>
                            </div>
                            break;
                        case 2:
                            <div class="form-group">
                                <label asp-for="State" class="control-label"></label>
                                <input asp-for="State" class="form-control py-2 rounded-pill mr-1 pr-5" />
                                <span asp-validation-for="State" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="City" class="control-label"></label>
                                <input asp-for="City" class="form-control py-2 rounded-pill mr-1 pr-5" />
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="District" class="control-label"></label>
                                <input asp-for="District" class="form-control py-2 rounded-pill mr-1 pr-5" />
                                <span asp-validation-for="District" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Street" class="control-label"></label>
                                <input asp-for="Street" class="form-control py-2 rounded-pill mr-1 pr-5" />
                                <span asp-validation-for="Street" class="text-danger"></span>
                            </div>
                            break;
                        case 3:
                            <div class="form-group">
                                <label asp-for="HouseNumber" class="control-label"></label>
                                <input asp-for="HouseNumber" class="form-control py-2 rounded-pill mr-1 pr-5" />
                                <span asp-validation-for="HouseNumber" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Complement" class="control-label"></label>
                                <input asp-for="Complement" class="form-control py-2 rounded-pill mr-1 pr-5" />
                                <span asp-validation-for="Complement" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="CellphoneNumber" class="control-label"></label>
                                <input asp-for="CellphoneNumber" class="form-control py-2 rounded-pill mr-1 pr-5" />
                                <span asp-validation-for="CellphoneNumber" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="TelephoneNumber" class="control-label"></label>
                                <input asp-for="TelephoneNumber" class="form-control py-2 rounded-pill mr-1 pr-5" />
                                <span asp-validation-for="TelephoneNumber" class="text-danger"></span>
                            </div>
                            break;
                    }
                }

                

                <!--<div class="form-group">
                    <label asp-for="Cpf" class="control-label"></label>
                    <input asp-for="Cpf" class="form-control py-2 rounded-pill mr-1 pr-5" />
                    <span asp-validation-for="Cpf" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="BirthDate" class="control-label"></label>
                    <input asp-for="BirthDate" class="form-control py-2 rounded-pill mr-1 pr-5" />
                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Gender" class="control-label"></label>
                    <input asp-for="Gender" class="form-control py-2 rounded-pill mr-1 pr-5" />
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Deficiency" class="control-label"></label>
                    <input asp-for="Deficiency" class="form-control py-2 rounded-pill mr-1 pr-5" />
