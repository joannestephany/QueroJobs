                    <label asp-for="SalaryExpectation" class="control-label"></label>
                    <input asp-for="SalaryExpectation" class="form-control py-2 rounded-pill mr-1 pr-5" />
                    <span asp-validation-for="SalaryExpectation" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="EmploymentStatus" class="control-label"></label>
                    <input asp-for="EmploymentStatus" class="form-control py-2 rounded-pill mr-1 pr-5" />
                    <span asp-validation-for="EmploymentStatus" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ActualRole" class="control-label"></label>
                    <input asp-for="ActualRole" class="form-control py-2 rounded-pill mr-1 pr-5" />
                    <span asp-validation-for="ActualRole" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control py-2 rounded-pill mr-1 pr-5" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>-->

                <div class="form-group d-flex justify-content-between">
                    @{
                        switch(@ViewData["controllerPage"]) {
                            case 1:
                                <p></p>
                                break;
                            case 2:
                            case 3:
                                <div class="button_back">
                                    <a name="" value="Voltar" asp-route-controllerPage="@(controllerPage-=1)" asp-controller="Candidate" asp-action="Create">Voltar</a>
                                </div>
                                break;
                        }
                    }
                    @{
                        switch(@ViewData["controllerPage"]) {
                            case 1:
                            case 2:
                                <div class="button_success">
                                    <a name="" value="Continuar" asp-route-controllerPage="@(controllerPage+=1)" asp-controller="Candidate" asp-action="Create">Continuar</a>
                                </div>
                                break;
                            case 3:
                                <input type="submit" name="" value="Continuar" class="btn button_success" asp-controller="Candidate" asp-action="Create"/>
                                break;
                        }
                    }
                </div>
            </form>
            <div style="text-align:center;">
                <span class="step active finish"></span>
                <span class="step"></span>
                <span class="step"></span>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para lista de empresas</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
