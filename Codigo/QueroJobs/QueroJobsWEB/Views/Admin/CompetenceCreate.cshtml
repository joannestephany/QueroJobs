@model QueroJobsWEB.Models.CompetenceModel

@{
    ViewData["Title"] = "Criar competência";
}

<h1>@ViewData["Title"]</h1>

<h4>Competência</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CompetenceCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CompetenceName" class="control-label"></label>
                <input asp-for="CompetenceName" class="form-control" />
                <span asp-validation-for="CompetenceName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" name="" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para lista de competências</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
