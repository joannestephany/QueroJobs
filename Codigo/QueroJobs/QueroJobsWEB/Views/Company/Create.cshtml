@model QueroJobsWEB.Models.CompanyModel

@{
    ViewData["Title"] = "Criar empresa";
    ViewData["Logo"] = "Quero Jobs";
    ViewData["TitleForm"] = "Cadastro";
    ViewData["TitleScreen"] = "Cadastro para empresas";
}

<div class="row body">
    <div class="col-sm-6 apresentation">
        <div class="row logo">
            <div class="col-sm-2"></div>
            <div class="col-sm-3 word_style">
                <p>@ViewData["Logo"]</p>
            </div>
            <div class="col-sm-7"></div>
        </div>
        <div class="row title_screen">
            <div class="col-sm-2"></div>
            <div class="col-sm-3 word_style">
                <p>@ViewData["TitleScreen"]</p>
            </div>
            <div class="col-sm-7"></div>
        </div>
        <div class="row text_background_first">
            <div class="col-sm-8"></div>
            <div class="col-sm-4 word_style">
                <p>@ViewData["logo"]</p>
            </div>
        </div>
    </div>
    <div class="row apresentation_mobile">
        <div class="title_mobile">
            <div class="row">
                <div class="col-sm-2"></div>
                <div class="col-sm-5" style="">
                    <div class="row">
                        <h2>@ViewData["TitleForm"]</h2>
                    </div>
                    <div class="row" style="font-size: 20px;">
                        <p>@ViewData["Title"]</p>
                    </div>
                </div>
                <div class="col-sm-5"></div>
            </div>
        </div>
    </div>
    <div class="col-sm-6 space_form">
        <h1>@ViewData["TitleForm"]</h1>
        <div class="col-sm-8 form">
            <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <br/><br/>
            <h4>Dados de Acesso</h4>
            <hr/>
                <div class="form-group">
                    <label asp-for="ResponsibleName" class="control-label"></label>
                        <input asp-for="ResponsibleName" class="form-control py-2 rounded-pill mr-1 pr-5" />
                    <span asp-validation-for="ResponsibleName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control py-2 rounded-pill mr-1 pr-5" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control py-2 rounded-pill mr-1 pr-5" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="control-label"></label>
                    <input asp-for="ConfirmPassword" class="form-control py-2 rounded-pill mr-1 pr-5" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            


            <br/><br/>
            <h4>Dados Empresa</h4>
                <hr />
            <div class="form-group">
                <label asp-for="FantasyName" class="control-label"></label>
                <input asp-for="FantasyName" class="form-control py-2 rounded-pill mr-1 pr-5" />
                <span asp-validation-for="FantasyName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CorporateName" class="control-label"></label>
                <input asp-for="CorporateName" class="form-control py-2 rounded-pill mr-1 pr-5" />
                <span asp-validation-for="CorporateName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cnpj" class="control-label"></label>
                <input asp-for="Cnpj" class="form-control py-2 rounded-pill mr-1 pr-5" />
                <span asp-validation-for="Cnpj" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StateRegistration" class="control-label"></label>
                <input asp-for="StateRegistration" class="form-control py-2 rounded-pill mr-1 pr-5" />
                <span asp-validation-for="StateRegistration" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-sm-6 form-group">
                    <label asp-for="Cep" class="control-label"></label>
                    <input asp-for="Cep" class="form-control py-2 rounded-pill mr-1 pr-5" />
                    <span asp-validation-for="Cep" class="text-danger"></span>
                </div>

                <div class="col-sm-6 form-group">
                    <label asp-for="Country" class="control-label"></label>
                    <input asp-for="Country" class="form-control py-2 rounded-pill mr-1 pr-5" />
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-4 form-group">
                    <label asp-for="State" class="control-label"></label>
                    <select asp-for="State" class="form-control">
                        <option value=""></option>
                        <option value="SE">SE</option>
                        <option value="RS">RS</option>
                    </select>
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>

                <div class="col-sm-8 form-group">
                    <label asp-for="City" class="control-label"></label>
                    <input asp-for="City" class="form-control py-2 rounded-pill mr-1 pr-5" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
            </div>

            
            <div class="form-group">
                <label asp-for="District" class="control-label"></label>
                <input asp-for="District" class="form-control py-2 rounded-pill mr-1 pr-5" />
                <span asp-validation-for="District" class="text-danger"></span>
            </div>
            

            <div class="row">
                <div class="col-sm-8 form-group">
                    <label asp-for="Street" class="control-label"></label>
                    <input asp-for="Street" class="form-control py-2 rounded-pill mr-1 pr-5" />
                    <span asp-validation-for="Street" class="text-danger"></span>
                </div>

                <div class="col-sm-4 form-group">
                    <label asp-for="HouseNumber" class="control-label"></label>
                        <input asp-for="HouseNumber" class="form-control py-2 rounded-pill mr-1 pr-5" />
                    <span asp-validation-for="HouseNumber" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Complement" class="control-label"></label>
                <input asp-for="Complement" class="form-control py-2 rounded-pill mr-1 pr-5" />
                <span asp-validation-for="Complement" class="text-danger"></span>
            </div>


            <div class="row">
                <div class="col-sm-6 form-group">
                    <label asp-for="CellphoneNumber" class="control-label"></label>
                    <input asp-for="CellphoneNumber" class="form-control py-2 rounded-pill mr-1 pr-5" />
                    <span asp-validation-for="CellphoneNumber" class="text-danger"></span>
                </div>

                <div class="col-sm-6 form-group">
                    <label asp-for="TelephoneNumber" class="control-label"></label>
                    <input asp-for="TelephoneNumber" class="form-control py-2 rounded-pill mr-1 pr-5" />
                    <span asp-validation-for="TelephoneNumber" class="text-danger"></span>
                </div>
            </div>
            

           



            

            <div class="form-group button_success">
                    <input type="submit" name="" value="Finalizar Cadastro" class="btn btn-lg  submit-button" asp-controller="Company" asp-action="Create"/>
            </div>
        </form>
    </div>
</div>

<script>
    inputStyleField();
    paintFooter('var(--roxo-escuro)');
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }